<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/app_name">

        <!-- Відображення версії додатку -->
        <Preference
            app:key="app_version"
            app:summary="1.0.0"
            app:title="Версія додатку" />

        <!-- Відображення імені розробника -->
        <Preference
            app:key="developer_name"
            app:summary="Zoomer"
            app:title="Developed by" />

        <!-- Посилання на відео -->
        <Preference
            app:key="youtube_link"
            app:summary="Click to earn!"
            app:title="Free money" />

    </PreferenceCategory>

</PreferenceScreen>